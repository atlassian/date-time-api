{
  "name": "@atlassian/date-time",
  "version": "0.2.0",
  "description": "Atlassian Frontend Date Time API ",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "exports": {
    "import": "./dist/esm/index.js",
    "require": "./dist/cjs/index.js"
  },
  "scripts": {
    "build": "npm run build:types && npm run build:amd && npm run build:cjs && npm run build:esm",
    "build:types": "tsc --project tsconfig.types.json",
    "build:amd": "tsc --project tsconfig.amd.json",
    "build:cjs": "tsc --project tsconfig.cjs.json",
    "build:esm": "tsc --project tsconfig.esm.json",
    "format": "npm run format:lint && npm run format:prettier",
    "format:lint": "eslint --fix .",
    "format:prettier": "prettier --write .",
    "test": "npm run test:tsc && npm run test:lint && npm run test:jest -- --coverage",
    "test:tsc": "tsc --noEmit",
    "test:prettier": "prettier --check .",
    "test:lint": "eslint .",
    "test:jest": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/atlassian/date-time-api.git"
  },
  "keywords": [
    "atlassian",
    "date",
    "time"
  ],
  "author": "Zac Xu",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/atlassian/date-time-api/issues"
  },
  "homepage": "https://github.com/atlassian/date-time-api#readme",
  "devDependencies": {
    "@eslint/js": "^9.24.0",
    "@types/jest": "^29.5.14",
    "eslint": "^9.24.0",
    "globals": "^16.0.0",
    "jest": "^29.7.0",
    "prettier": "3.5.3",
    "ts-jest": "^29.3.1",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.29.0"
  },
  "publishConfig": {
    "registry": "https://packages.atlassian.com/api/npm/npm-public/"
  }
}
